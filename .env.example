# =========================
# THE DUCKERS - Local Dev
# =========================

# -------------------------
# MySQL (Docker)
# -------------------------
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=the_duckers
MYSQL_USER=duckers
MYSQL_PASSWORD=duckerspass
MYSQL_PORT=3306

# -------------------------
# MongoDB (Docker)
# -------------------------
MONGO_INITDB_DATABASE=the_duckers_catalog
MONGO_PORT=27017

# Optional: If later you decide to enable auth in Mongo (not Day 1)
# MONGO_INITDB_ROOT_USERNAME=root
# MONGO_INITDB_ROOT_PASSWORD=root

# -------------------------
# Container names (stable)
# -------------------------
MYSQL_CONTAINER_NAME=duckers-mysql
MONGO_CONTAINER_NAME=duckers-mongo

# -------------------------
# Optional: Backend/Frontend ports (for later)
# (Still useful to document from day 1)
# -------------------------
BACKEND_PORT=8080
FRONTEND_PORT=5173